<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljfu.lujorblog.mapper.TagMapper">

    <resultMap id="TagAll" type="com.ljfu.lujorblog.domain.Tag" >
        <id column="tagId" property="tagId" />
        <result column="tagName" property="tagName" />
        <result column="tagDescription" property="tagDescription" />
        <result column="tagStatus" property="tagStatus" />
        <!--<collection property="articles" column="tagId" javaType="ArrayList"-->
                    <!--ofType="com.ljfu.lujorblog.domain.Article"-->
                    <!--select="com.ljfu.lujorblog.mapper.ArticleMapper.selectArticlesByTagId"-->
                    <!--fetchType="lazy" >-->
        <!--</collection>-->
    </resultMap>

    <insert id="insertTag" parameterType="com.ljfu.lujorblog.domain.Tag" >
        insert into tag (tagId, tagName, tagDescription, tagStatus)
        values (#{tagId}, #{tagName}, #{tagDescription}, #{tagStatus})
    </insert>

    <insert id="insertTagIfNecessary" parameterType="com.ljfu.lujorblog.domain.Tag" >
        insert into tag
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="tagId != null">tagId, </if>
            <if test="tagName != null">tagName, </if>
            <if test="tagDescription != null">tagDescription, </if>
            <if test="tagStatus != null">tagStatus</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="tagId != null">#{tagId}, </if>
            <if test="tagName != null">#{tagName}, </if>
            <if test="tagDescription != null">#{tagDescription}, </if>
            <if test="tagStatus != null">#{tagStatus}</if>
        </trim>
    </insert>

    <delete id="deleteByTagId" parameterType="java.lang.Integer" >
        delete from tag
        where tagId = #{tagId};
    </delete>

    <select id="selectByPrimaryKey" resultMap="TagAll" parameterType="java.lang.Integer" >
        select * from tag
        where tagId = #{tagId};
    </select>

    <select id="selectAllTag" resultType="com.ljfu.lujorblog.domain.Tag" >
        select * from tag
        order by tagId asc;
    </select>
    
    <select id="selectTagsByArticleId" parameterType="java.lang.Integer"
            resultType="com.ljfu.lujorblog.domain.Tag" >
        select * from tag
        where tagId in (
            select tagId
            from articletotag
            where articleId = #{articleId};
        )
    </select>

    <update id="updateTag" parameterType="com.ljfu.lujorblog.domain.Tag" >
        update tag set tagName = #{tagName}, tagDescription = #{tagDescription},
            tagStatus = #{tagStatus}
        where tagId = #{tagId};
    </update>

    <update id="updateTagIfNecessary" parameterType="com.ljfu.lujorblog.domain.Tag" >
        update tag
        <set>
            <if test="tagName != null" >tagName = #{tagName}, </if>
            <if test="tagDescription != null" >tagDescription = #{tagDescription}, </if>
            <if test="tagStatus != null" >tagStatus = #{tagStatus}</if>
        </set>
        where tagId = #{tagId};
    </update>

</mapper>