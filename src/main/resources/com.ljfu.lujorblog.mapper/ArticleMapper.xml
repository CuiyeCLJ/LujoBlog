<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljfu.lujorblog.mapper.ArticleMapper">

    <resultMap id="ArticleBase" type="com.ljfu.lujorblog.domain.Article" >
        <id column="articleId" property="" />
        <result column="userId" property="userId"/>
        <result column="categoryId" property="categoryId"/>
        <result column="articleTitle" property="articleTitle"/>
        <result column="articleSummary" property="articleSummary" />
        <result column="articleCreationTime" property="articleCreationTime"/>
        <result column="articleUpdateTime" property="articleUpdateTime"/>
        <result column="articleStatus" property="articleStatus"/>
    </resultMap>

    <resultMap id="ArticleBlog" type="com.ljfu.lujorblog.domain.Article" extends="ArticleBase">
        <result column="articleContent" property="articleContent"/>
    </resultMap>
    
    <sql id="BaseColumnList" >
        articleId, userId, categoryId, articleTitle, articleSummary, articleCreationTime,
         articleUpdateTime, articleStatus
    </sql>
    
    <sql id="BlogColumnList" >
        articleContent
    </sql>

    <insert id="save" parameterType="com.ljfu.lujorblog.domain.Article" >
      insert into article (articleId, userId, categoryId, articleTitle,
      articleContent, articleCreationTime, articleUpdateTime, articleStatus)
      value (#{articleId}, #{userId}, #{categoryId}, #{articleTitle},
       #{articleContent}, #{articleCreationTime}, #{articleUpdateTime}, #{articleStatus})
    </insert>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
        delete from article
        where articleId = #{articleId}
    </delete>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="ArticleBlog" >
        select
            <include refid="BaseColumnList" />,
            <include refid="BlogColumnList" />
        from article
        where articleId = #{articleId}
    </select>

    <select id="selectAllArticle" parameterType="map" resultMap="ArticleBase" >
        select
            <include refid="BaseColumnList" />
        from article
        order by desc
    </select>

    <select id="selectArticleList" parameterType="map" />

    <update id="update" parameterType="com.ljfu.lujorblog.domain.Article" >
        update article
        set userId = #{userId},
          categoryId = #{categoryId},
          articleTitle = #{articleTitle},
          articleSummary = #{articleSummary},
          articleCreationTime = #{articleCreationTime},
          articleUpdateTime = #{articleUpdateTime}
          articleStatu = #{sarticleStatus}
        where articleId = #{articleId}
    </update>

</mapper>